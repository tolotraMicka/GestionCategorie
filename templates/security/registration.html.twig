{% extends "base.html.twig" %}
{% block body %}
<div class="container">
	<h1>Inscription</h1>
	{{form_start(form)}}

	{{form_row(form.username,{'label':'Utilisateur :','attr':{'placeholder':'Nom d\'utilisateur'}})}}
	{{form_row(form.email,{'label':'E-mail :','attr':{'placeholder':'E-mail'}})}}	
    {{form_row(form.password,{'label':'Mot de passe :','attr':{'placeholder':'Mot de passe'}})}}    
    {{form_row(form.confirm_password,{'label':'Confirmation Mdp :','attr':{'placeholder':'Confirmation mot de passe'}})}}
		<button type="submit" class="btn btn-success">Inscription</button>
		{{form_end(form)}}
	</div>
{% endblock %}
